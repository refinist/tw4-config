{
  "name": "@refinist/tw4-config",
  "version": "0.0.0",
  "description": "Common basic configurations for Tailwind CSS v4",
  "homepage": "https://github.com/refinist/tw4-config#readme",
  "bugs": {
    "url": "https://github.com/refinist/tw4-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/refinist/tw4-config.git"
  },
  "license": "MIT",
  "author": "Jeff Wang",
  "sideEffects": [
    "*.css"
  ],
  "type": "module",
  "exports": {
    "./*": "./dist/*",
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "lightningcss --minify src/index.css -o dist/index.css",
    "format": "prettier --write .",
    "release": "bumpp && pnpm publish"
  },
  "prettier": "@refinist/prettier-config",
  "devDependencies": {
    "@refinist/prettier-config": "^0.0.4",
    "bumpp": "^10.2.0",
    "lightningcss": "^1.30.1",
    "lightningcss-cli": "^1.30.1",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.11"
  },
  "peerDependencies": {
    "tailwindcss": "^4.1.11"
  },
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=22.17.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
